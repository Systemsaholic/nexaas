[Unit]
Description=Nexaas Engine
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/opt/nexaas/engine
ExecStart=/opt/nexaas/engine/.venv/bin/uvicorn server:app --host 0.0.0.0 --port 8400
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1
MemoryMax=6G
MemoryHigh=4G

[Install]
WantedBy=multi-user.target
